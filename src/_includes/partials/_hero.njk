<div class="flex justify-center md:justify-start">
  <div class="flex flex-col gap-0.75 bg-sii-light-background p-0.75 rounded-lg grow-1 flex-wrap xs:max-w-31.25 sm:max-w-72.25">
    <div class="grid grid-cols-2 gap-0.75">
      <div class="bg-sii-accent rounded-lg p-1 flex flex-col gap-1.5 md:max-w-35 grow-1">
        <div>
          {% svgsprite %}
          {% svg "entitlements", "w-5.5 h-5.5 p-1 bg-sii-primary fill-white rounded-lg" %}
        </div>
        <p class="max-w-15 text-sii-light-header">Entitlements Management</p>
      </div>
      <div class="bg-sii-accent rounded-lg p-1 flex flex-col gap-1.5 md:max-w-35 grow-1">
        <div>
          {% svgsprite %}
          {% svg "shared-signals", "w-5.5 h-5.5 p-1 bg-sii-primary fill-white rounded-lg" %}
        </div>
        <p class="max-w-8 text-sii-light-header">Risk Signal Sharing</p>
      </div>
      <div class="bg-sii-accent rounded-lg p-1 flex flex-col gap-1.5 md:max-w-35 grow-1">
        <div>
          {% svgsprite %}
          {% svg "lcm", "w-5.5 h-5.5 p-1 bg-sii-primary fill-white rounded-lg" %}
        </div>
        <p class="max-w-15 text-sii-light-header">Lifecycle Management</p>
      </div>
      <div class="bg-sii-accent rounded-lg p-1 flex flex-col gap-1.5 md:max-w-35 grow-1">
        <div>
          {% svgsprite %}
          {% svg "session-termination", "w-5.5 h-5.5 p-1 bg-sii-primary fill-white rounded-lg" %}
        </div>
        <p class="max-w-8 text-sii-light-header">Session Termination</p>
      </div>
    </div>
    <div class="h-7 flex bg-sii-primary rounded-lg justify-center items-center gap-1">
      <div>
        {% svgsprite %}
        {% svg "sso", "w-4 h-4 fill-white rounded-lg *:color-sii-dark-integration-panel-background" %}
      </div>
      <p class="text-white">Single Sign-On</p>
    </div>
  </div>
</div>
