<div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-16">
  {%- for item in collections.integration|sort(attribute='data.order') -%}
    <section class="dark:text-color-white">
      <div class="">
        <h2 class="text-sii-cool-dark-blue dark:text-sii-cyan-light text-3xl">{{ item.data.title }}</h2>
      </div>
      <div class="inline-flex flex-wrap gap-2 mt-4">
        {% linkButton item.data.workshop_url, "Workshop" %}
        {% linkButton item.data.podcast_url, "Podcast" %}
        {% linkButton item.data.standards_url, "Standard" %}
      </div>
      <p class="md:mt-2">{{item.content | safe }}</p>
    </section>
  {%- endfor -%}
</div>


