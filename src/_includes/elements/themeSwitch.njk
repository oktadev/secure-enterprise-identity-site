<button id="theme-toggle" class="w-5 h-2.5 ml-1 mt-0.25 rounded-full bg-sii-light-background flex items-center transition duration-300 focus:outline-none shadow cursor-pointer">
	<div id="theme-toggle-switch" class="flex justify-center items-center w-3 h-3 relative rounded-full transition duration-500 transform -translate-x-1 p-1 text-sii-light-background">
    <div id="theme-toggle-light-icon" class="hidden w-1.75 h-1.75">
      {% svgsprite %}
      {% svg "light-icon", "w-1.75 h-1.75" %}
    </div>
    <div id="theme-toggle-dark-icon" class="hidden w-1.75 h-1.75">
      {% svgsprite %}
      {% svg "dark-icon", "w-1.75 h-1.75" %}
    </div>
  </div>
</button>