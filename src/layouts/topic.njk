---
layout: base
---

<section class="mt-2 grid grid-cols-1 md:grid-cols-2 gap-9 auto-rows-fr">
  {# {%- for item in collections.topic | sort(attribute='data.order') -%} #}
  <div class="md:max-w-60 mb-5 grid justify-between gap-2 grow grid-rows-[2fr_min-content_1fr]">
    <div class="flex flex-col justify-between">
      <div class="flex flex-col gap-1.5">
        <div class="flex gap-2 items-center">
          {# {% svgsprite %}
          {% svg item.data.fragment, "w-3 h-3 p-0.5 bg-sii-primary rounded-md fill-sii-light-background
          **:text-sii-primary" %} #}
          <h2 class="text-sii-light-header dark:text-sii-dark-header text-3xl">{{ title }}</h2>
        </div>
        <p class="mb-3">{{ description }}</p>
      </div>
      <div class="inline-flex flex-wrap gap-2">
        {% if tutorial_url %}
        {% linkButton tutorial_url, "Tutorial" %}
        {% endif %}
        {% if podcast_url %}
        {% linkButton podcast_url, "Podcast" %}
        {% endif %}
        {% if standards_url %}
        {% linkButton standards_url, "Standard" %}
        {% endif %}
      </div>
    </div>

    <hr class="my-1 h-[1px] bg-sii-border dark:bg-sii-dark-text border-0" />

    <div class="flex flex-col mt-0.5 gap-1">
      {%- for link in site_urls -%}
      <div class="flex justify-between items-center">
        <div class="flex items-center">
          <img src="img/site-icon.svg" class="w-2 h-2 mr-1" />
          <a href="{{link.url}}">{{link.text}}</a>
        </div>
        <img src="img/arrow_forward.svg" class="w-1.5 h-1.5" />
      </div>
      {%- endfor -%}
      {%- for link in video_urls -%}
      <div class="flex justify-between items-center">
        <div class="flex items-center">
          <img src="img/video-icon.svg" class="w-2 h-2 mr-1" />
          <a href="{{link.url}}">{{link.text}}</a>
        </div>
        <img src="img/arrow_forward.svg" class="w-1.5 h-1.5" />
      </div>
      {%- endfor -%}
    </div>
  </div>
  {# {%- endfor -%} #}
</section>

